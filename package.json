{
  "name": "promised-retry",
  "version": "0.3.0",
  "description": "A generic promised based retry mechanism. Useful for eg. ensuring an available database or message queue connection",
  "homepage": "http://github.com/voxpelli/node-promised-retry",
  "repository": {
    "type": "git",
    "url": "git://github.com/voxpelli/node-promised-retry.git"
  },
  "author": {
    "name": "Pelle Wessman",
    "email": "pelle@kodfabrik.se",
    "url": "http://kodfabrik.se/"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "index.js",
  "scripts": {
    "check:dependency-check": "dependency-check *.js 'test/**/*.js' --no-dev -i @types/pg",
    "check:installed-check": "installed-check",
    "check:lint": "eslint .",
    "check:tsc": "tsc",
    "check": "run-p check:*",
    "test:mocha": "cross-env NODE_ENV=test c8 --reporter=lcov --reporter text mocha test/**/*.spec.js",
    "test": "run-s check test:*"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "devDependencies": {
    "@types/node": "^12.0.0",
    "c8": "^7.3.4",
    "chai": "4.2.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "dependency-check": "^4.1.0",
    "eslint": "5.16.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "^4.3.0",
    "installed-check": "^4.0.0-0",
    "mocha": "^8.2.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^9.2.0",
    "sinon-chai": "^3.5.0",
    "typescript": "^4.0.3"
  }
}
